<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.furrynoodles.twitter"
      version="0.1.0">
    <name>Twitter</name>
    <description>Test Phonegap Plugin</description>
    <license>MIT</license>
    <keywords>phonegap,furry</keywords>


    <js-module src="www/twitter.js" name="Twitter">
        <clobbers target="window.twitter" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Twitter">
                <param name="android-package" value="com.furrynoodles.twitter.Twitter"/>
            </feature>
        </config-file>

        <source-file src="src/android/Twitter.java" target-dir="src/com/furrynoodles/twitter" />      
     </platform>          
</plugin>
