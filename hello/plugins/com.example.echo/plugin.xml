<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.example.echo"
      version="0.1.0">
    <name>Echo</name>
    <description>Test Phonegap Plugin</description>
    <license>MIT</license>
    <keywords>phonegap,furry</keywords>


    <js-module src="www/echo.js" name="Echo">
        <clobbers target="window.echo" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Echo">
                <param name="android-package" value="com.example.myplugin.Echo"/>
            </feature>
        </config-file>

        <source-file src="src/android/Echo.java" target-dir="src/com/example/myplugin" />      
     </platform>          
</plugin>
